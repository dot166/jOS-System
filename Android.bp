android_app {
    name: "jOS-System",
    platform_apis: true,
    certificate: "platform",

    resource_dirs: ["res"],

    srcs: [
        "java/**/*.kt",
        "java/**/*.java",
    ],

    manifest: "AndroidManifest.xml",

    product_specific: true,

    static_libs: [
        "jOS-common-library",
    ],

    optimize: {
        proguard_flags_files: ["proguard-rules.pro"],
    },

    kotlincflags: ["-Xjvm-default=enable"],
}
