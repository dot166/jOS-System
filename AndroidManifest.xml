<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="jOS.System"
    coreApp="true"
    android:sharedUserId="android.uid.system"
    android:versionCode="33"
    android:versionName="13.5">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_app"
        android:label="@string/app_name"
        tools:replace="android:label"
        android:supportsRtl="true"
        android:theme="@lineageos.platform:style/jOS.Theme">
        <activity
            android:name="com.j.jOS.egg.menu.MenuActivity"
            android:exported="false"
            android:label="@string/jOS_egg_name" />
        <activity
            android:name=".PlatLogoActivity"
            android:exported="true"
            android:label="@string/jOS_egg_name"
            android:theme="@android:style/Theme.Holo.Wallpaper.NoTitleBar" />
        <!-- Contributors Cloud (MyDeviceInfo category) -->
        <activity
            android:name=".CreditsActivity"
            android:exported="true"
            android:label="@string/contributors_cloud_fragment_title">
            <intent-filter>
                <action android:name="com.android.settings.action.IA_SETTINGS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="com.android.settings.category"
                android:value="com.android.settings.category.ia.my_device_info" />
            <meta-data
                android:name="com.android.settings.order"
                android:value="2" />
            <meta-data
                android:name="com.android.settings.profile"
                android:value="primary_profile_only" />
            <meta-data
                android:name="com.android.settings.summary"
                android:resource="@string/summary_empty" />
        </activity>

        <!-- started from ... somewhere -->
        <activity
            android:name="com.android_i.egg.Nyandroid"
            android:excludeFromRecents="true"
            android:exported="false"
            android:hardwareAccelerated="true"
            android:icon="@drawable/i_platlogo"
            android:label="@string/i_egg_name"
            android:launchMode="singleInstance"
            android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen" />

        <activity
            android:name="com.android_l.egg.LLandActivity"
            android:excludeFromRecents="true"
            android:exported="false"
            android:hardwareAccelerated="true"
            android:icon="@drawable/l_icon"
            android:label="@string/l_lland"
            android:launchMode="singleInstance"
            android:screenOrientation="locked"
            android:theme="@android:style/Theme.Holo.NoActionBar" />

        <activity
            android:name="com.android_k.egg.DessertCase"
            android:excludeFromRecents="true"
            android:exported="false"
            android:hardwareAccelerated="true"
            android:icon="@drawable/k_platlogo"
            android:label="@string/k_dessert_case"
            android:launchMode="singleInstance"
            android:screenOrientation="locked"
            android:theme="@android:style/Theme.Holo.NoTitleBar.Fullscreen" />

        <!-- a gallery of delicious treats -->
        <service
            android:name="com.android_k.egg.DessertCaseDream"
            android:enabled="false"
            android:exported="true"
            android:icon="@drawable/k_platlogo"
            android:label="@string/k_dessert_case"
            android:permission="android.permission.BIND_DREAM_SERVICE">
            <intent-filter>
                <action android:name="android.service.dreams.DreamService" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </service>
    </application>

</manifest>
