android_app {
    name: "jOS-System",

    resource_dirs: ["src/main/res"],

    srcs: [
        "src/main/java/**/*.kt",
        "src/main/java/**/*.java",
        "src_aosp/**/*.java",
    ],

    manifest: "src/main/AndroidManifest.xml",

    product_specific: true,

    static_libs: [
        // DO NOT EDIT THIS SECTION MANUALLY
        "androidx-constraintlayout_constraintlayout",
        "androidx.cardview_cardview",
        "androidx.recyclerview_recyclerview",
        "jOS_androidx.preference_preference-ktx",
        "jOS_com.github.bumptech.glide_glide",
        "com.google.android.material_material",
        "jOS_androidx.databinding_viewbinding",
        "jOS_androidx.databinding_databinding-common",
        "jOS_androidx.databinding_databinding-runtime",
        "jOS_androidx.databinding_databinding-adapters",
        "jOS_androidx.databinding_databinding-ktx",
    ],

    optimize: {
        proguard_flags_files: ["proguard-rules.pro"],
    },

    sdk_version: "current",

    kotlincflags: ["-Xjvm-default=enable"],
}
