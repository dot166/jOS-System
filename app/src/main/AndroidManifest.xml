<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_app"
        android:supportsRtl="true"
        android:theme="@style/Theme.JOSSystem">
        <activity
            android:name=".PlatLogoActivity"
            android:exported="true"
            android:label="@string/jOS_egg_name"
            android:theme="@android:style/Theme.Wallpaper.NoTitleBar.Fullscreen" />
        <activity
            android:name=".SettingsActivity"
            android:exported="true"
            android:label="@string/settings_name"
            android:icon="@mipmap/ic_launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".info.InfoActivity" />
        <activity android:name="com.j.Wallpapers.WallpaperActivity"
            android:exported="true"
            android:label="@string/wallpaper_app_name"
            android:icon="@mipmap/ic_app"
            android:theme="@style/Theme.Wallpapers">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.SET_WALLPAPER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <service
            android:name="com.j.Wallpapers.MyWallpaperService"
            android:enabled="true"
            android:label="DVD Live Wallpaper"
            android:permission="android.permission.BIND_WALLPAPER"
            android:exported="true">
            <intent-filter>
                <action android:name="android.service.wallpaper.WallpaperService" />
            </intent-filter>
            <meta-data android:name="android.service.wallpaper" android:resource="@xml/mywallpaper" />
        </service>
    </application>
</manifest>
