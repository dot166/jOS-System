<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.j.jOS"
    android:versionCode="33"
    android:versionName="13.5">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.SET_WALLPAPER" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_app"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.JOSSystem">
        <activity
            android:name=".egg.menu.MenuActivity"
            android:exported="false"
            android:label="@string/jOS_egg_name" />
        <activity
            android:name=".egg.PlatLogoActivity"
            android:exported="true"
            android:label="@string/jOS_egg_name"
            android:theme="@android:style/Theme.Wallpaper.NoTitleBar.Fullscreen" />
        <activity
            android:name=".SettingsActivity"
            android:exported="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/settings_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.j.Wallpapers.WallpaperActivity"
            android:exported="true"
            android:label="@string/wallpaper_app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.SET_WALLPAPER" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.j.Wallpapers.WallpapersListFragment"
            android:exported="false"
            android:label="@string/home_screen" />
        <activity
            android:name="com.j.Wallpapers.lock"
            android:exported="false"
            android:label="@string/lock_screen" />

        <!-- started from ... somewhere -->
        <activity
            android:name="com.android_i.egg.Nyandroid"
            android:excludeFromRecents="true"
            android:exported="false"
            android:hardwareAccelerated="true"
            android:icon="@drawable/i_platlogo"
            android:label="@string/i_egg_name"
            android:launchMode="singleInstance"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" />

        <activity
            android:name="com.android_l.egg.LLandActivity"
            android:excludeFromRecents="true"
            android:exported="false"
            android:hardwareAccelerated="true"
            android:icon="@drawable/l_icon"
            android:label="@string/l_lland"
            android:launchMode="singleInstance"
            android:screenOrientation="locked"
            android:theme="@android:style/Theme.Material.NoActionBar" />

        <activity
            android:name="com.android_k.egg.DessertCase"
            android:excludeFromRecents="true"
            android:exported="false"
            android:hardwareAccelerated="true"
            android:icon="@drawable/k_platlogo"
            android:label="@string/k_dessert_case"
            android:launchMode="singleInstance"
            android:screenOrientation="locked"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" />

        <!-- a gallery of delicious treats -->
        <service
            android:name="com.android_k.egg.DessertCaseDream"
            android:enabled="false"
            android:exported="true"
            android:icon="@drawable/k_platlogo"
            android:label="@string/k_dessert_case"
            android:permission="android.permission.BIND_DREAM_SERVICE">
            <intent-filter>
                <action android:name="android.service.dreams.DreamService" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </service>

        <service
            android:name="com.j.Wallpapers.MyWallpaperService"
            android:enabled="true"
            android:exported="true"
            android:label="DVD Live Wallpaper"
            android:permission="android.permission.BIND_WALLPAPER">
            <intent-filter>
                <action android:name="android.service.wallpaper.WallpaperService" />
            </intent-filter>

            <meta-data
                android:name="android.service.wallpaper"
                android:resource="@xml/mywallpaper" />
        </service>
    </application>

</manifest>